<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParamsFragment">

    <TableLayout
        android:id="@+id/selfcheck_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:padding="15dip"
            android:layout_height="match_parent"
            android:text="@string/param_title"
            android:textFontWeight="1000"
            android:textSize="20sp"
            android:gravity="left"
            android:textColor="#000"
            />
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_margin="0.5dip"
            android:background="#ffcccccc"
            android:orientation="horizontal">
            <TableRow
                android:layout_weight=".7"
                android:layout_height="match_parent"
                >
                <TextView
                    android:padding="15dip"
                    android:textColor="#000"
                    android:id="@+id/speed"
                    android:gravity="left"
                    android:textSize="35sp"
                    android:layout_height="match_parent"
                    android:text="@string/param_content1"
                    />
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:text="7"
                    />
                <TextView android:text="(g)" android:textColor="#000"/>
            </TableRow>
        </TableRow>
        <TableRow
            android:layout_weight=".7"
            android:layout_height="match_parent"
            >
            <TextView
                android:padding="15dip"
                android:textColor="#ff0033"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:text="（加速度范围100——200）"
                android:textSize="20sp"
                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_margin="0.5dip"
            android:background="#ffcccccc"
            android:orientation="horizontal">
            <TableRow
                android:layout_weight=".7"
                android:layout_height="match_parent"
                >
                <TextView
                    android:padding="15dip"
                    android:textSize="35sp"
                    android:textColor="#000"
                    android:gravity="left"
                    android:layout_height="match_parent"
                    android:text="@string/param_content2"
                    />
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|left"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:textAlignment="center"
                    android:text="2"
                    />
                <TextView android:text="(s)" android:textColor="#000"/>
            </TableRow>
        </TableRow>
        <TableRow
            android:layout_weight=".7"
            android:layout_height="match_parent"
            >
            <TextView
                android:padding="15dip"
                android:textColor="#ff0033"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="（加速度范围100——200）"
                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_margin="0.5dip"
            android:background="#ffcccccc"
            android:orientation="horizontal">
            <TableRow
                android:layout_weight=".7"
                android:layout_height="match_parent"
                >
                <TextView
                    android:padding="15dip"
                    android:textColor="#000"
                    android:gravity="left"
                    android:textSize="35sp"
                    android:layout_height="match_parent"
                    android:text="@string/param_content3"
                    />
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|left"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone"
                    android:textAlignment="center"
                    android:text="60"
                    />
                <TextView android:text="(s)" android:textColor="#000"/>
            </TableRow>
        </TableRow>
        <TableRow
            android:layout_weight=".7"
            android:layout_height="match_parent"
            >
            <TextView
                android:padding="15dip"
                android:textColor="#ff0033"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:text="（姿态判定时间间隔100——200）"
                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="70sp"
            android:orientation="horizontal">
            <Button
                android:text="@string/param_send_config"
                android:textColor="#fff"
                android:textSize="35sp"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:background="#5DB851"
                />
        </TableRow>
    </TableLayout>

</FrameLayout>