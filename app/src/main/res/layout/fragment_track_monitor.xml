<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackMonitorFragment">

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ffcccccc"
            >
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:layout_margin="0.5dip"
                android:orientation="horizontal">
              <TableRow>
                  <TextView
                      android:padding="10dip"
                      android:layout_height="match_parent"
                      android:layout_width="wrap_content"
                      android:text="A距离："
                      android:textFontWeight="1000"
                      android:textSize="25sp"
                      android:gravity="left"
                      android:textColor="#000"
                      />
              </TableRow>
              <TableRow>
                  <TextView
                      android:padding="10dip"
                      android:layout_height="match_parent"
                      android:layout_width="wrap_content"
                      android:text="A距离："
                      android:textFontWeight="1000"
                      android:textSize="25sp"
                      android:gravity="left"
                      android:textColor="#000"
                      />
              </TableRow>
              <TableRow>
                  <TextView
                      android:padding="10dip"
                      android:layout_height="match_parent"
                      android:layout_width="wrap_content"
                      android:text="A距离："
                      android:textFontWeight="1000"
                      android:textSize="25sp"
                      android:gravity="left"
                      android:textColor="#000"
                      />
              </TableRow>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:id="@+id/canvas_location"
            android:layout_height="480dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dip"
                >
                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffcccccc"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:padding="10dip"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="A距离："
                        android:textFontWeight="1000"
                        android:textSize="25sp"
                        android:gravity="left"
                        android:textColor="#000"
                        />
                    <TextView
                        android:padding="10dip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="B距离："
                        android:textFontWeight="1000"
                        android:textSize="25sp"
                        android:gravity="left"
                        android:textColor="#000"
                        />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    <TextView
                        android:padding="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="A方向："
                        android:textFontWeight="1000"
                        android:textSize="25sp"
                        android:gravity="left"
                        android:textColor="#000"
                        />
                    <TextView
                        android:padding="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="B方向："
                        android:textFontWeight="1000"
                        android:textSize="25sp"
                        android:gravity="left"
                        android:textColor="#000"
                        />
                    </LinearLayout>
                </TableLayout>
                <com.example.bds.CmntWay
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffcccccc"
                    >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="20dip"
                        android:layout_margin="0.5dip"
                        android:orientation="horizontal">
                        <TableRow
                            android:layout_weight=".7"
                            android:layout_height="match_parent"
                            >
                            <TextView
                                android:padding="15dip"
                                android:textColor="#000"
                                android:gravity="left"
                                android:textSize="35sp"
                                android:layout_height="match_parent"
                                android:text="@string/strobe_control_warn"
                                />
                        </TableRow>
                        <TableRow
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            >
                            <RadioGroup
                                android:layout_height="match_parent"
                                android:gravity="center|left"
                                android:id="@+id/strobeAlarm"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:id="@+id/strobe_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:textSize="35sp"
                                    android:text="@string/strobe_control_on"/>
                                <RadioButton
                                    android:id="@+id/strobe_end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="35sp"
                                    android:text="@string/strobe_control_off"/>
                            </RadioGroup>
                        </TableRow>
                    </TableRow>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/strobe_alarm"
                            android:layout_width="120dip"
                            android:layout_height="wrap_content"
                            android:text="@string/param_send_config"
                            android:textColor="#fff"
                            android:background="#5DB851"/>
                    </LinearLayout>
                </TableLayout>
                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffcccccc"
                    >
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="20dip"
                        android:layout_margin="0.5dip"
                        android:orientation="horizontal">
                    <TableRow
                        android:layout_weight=".7"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:padding="15dip"
                            android:layout_height="match_parent"
                            android:text="系统休眠"
                            android:textFontWeight="1000"
                            android:textSize="35sp"
                            android:gravity="left"
                            android:textColor="#000"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        >
                    <RadioGroup
                        android:id="@+id/sys_rest"
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        >
                    </RadioGroup>
                    </TableRow>
                    </TableRow>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/send_sysRest"
                            android:layout_width="120dip"
                            android:layout_height="wrap_content"
                            android:text="@string/param_send_config"
                            android:textColor="#fff"
                            android:background="#5DB851"/>
                    </LinearLayout>
                </TableLayout>
            </LinearLayout>
    </LinearLayout>
</ScrollView>
